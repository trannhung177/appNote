<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <solid android:color="#fd7988" />
        <stroke android:color="#ff1493"
            android:width="1dp" />
        <corners android:radius="20dp" />



    </shape>
</item>
<item>
    <shape android:shape="rectangle">
        <gradient android:startColor="#1111"
            android:endColor="#122"
            android:angle="45"/>
        <stroke android:color="#758eb8"
            android:width="1dp" />
        <corners android:radius="20dp" />



    </shape>
</item>



</selector>