<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hinh4"
    tools:context=".addLichHenActivity2">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lưu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.229"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.882" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="đóng"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.882" />

    <EditText
        android:id="@+id/tieude"
        android:layout_width="354dp"
        android:layout_height="38dp"
        android:ems="10"
        android:hint="Tiêu đề"

        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        android:textColorHint="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inpTime"
        app:layout_constraintVertical_bias="0.11" />

    <EditText
        android:id="@+id/noidug"
        android:layout_width="369dp"
        android:layout_height="313dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Nội dung"
        android:textColorHint="#000"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tieude"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/inpTime"
        android:layout_width="210dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:layout_weight="7"
        android:background="#B1E89A"
        android:hint="Chọn giờ"
        android:onClick="pickTime"
        android:padding="5dp"
        android:textColor="#D51010"
        android:textColorHint="#000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.783"
        app:layout_constraintStart_toEndOf="@+id/txtNgayCongViec2"
        app:layout_constraintTop_toBottomOf="@+id/btnChonNgay"
        tools:ignore="MissingConstraints"></TextView>

    <TextView
        android:id="@+id/tgianthuc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="84dp"
        android:layout_weight="7"
        android:hint="dfg"
        android:textColor="#F60606"
        android:textColorHint="#000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChonNgay"
        tools:ignore="MissingConstraints"></TextView>

    <TextView
        android:id="@+id/txtNgayCongViec2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:layout_weight="7"
        android:hint="Thoi gian"
        android:textColor="#F60606"
        android:textColorHint="#000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChonNgay"
        tools:ignore="MissingConstraints"></TextView>

    <TextView
        android:id="@+id/btnChonNgay"
        android:layout_width="136dp"
        android:layout_height="38dp"
        android:layout_marginTop="48dp"
        android:layout_weight="3"
        android:text="Chon ngay"
        android:textColorHint="#000"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"></TextView>

    <TextView
        android:id="@+id/txtNgayCongViec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_weight="7"
        android:hint="Chọn ngày"
        android:textColor="#F60606"
        android:textColorHint="#000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnChonNgay"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>